cc_library_static {
    name: "libLLVM16ARMCodeGen",
    defaults: [
        "llvm16-lib-defaults",
        "llvm16-arm-defaults",
    ],
    srcs: ["*.cpp"],

    // b/llvm/31559947, b/llvm/31938382 clang-tidy segmentation fault.
    tidy_checks: [
        "-clang-analyzer-*",
        "-readability-*",
    ],
}

cc_defaults {
    name: "llvm16-arm-defaults",
    generated_headers: ["llvm16-gen-arm"],
    static_libs: ["llvm16-arm-headers"],
}

cc_library_static {
    name: "llvm16-arm-headers",
    vendor_available: true,
    host_supported: true,
    target: {
        windows: {
            enabled: true,
        },
    },
    export_include_dirs: ["."],
}

llvm16_tblgen {
    name: "llvm16-gen-arm",
    in: "ARM.td",
    outs: [
        "ARMGenRegisterInfo.inc",
        "ARMGenInstrInfo.inc",
        "ARMGenCodeEmitter.inc",
        "ARMGenMCCodeEmitter.inc",
        "ARMGenMCPseudoLowering.inc",
        "ARMGenAsmWriter.inc",
        "ARMGenAsmMatcher.inc",
        "ARMGenDAGISel.inc",
        "ARMGenFastISel.inc",
        "ARMGenCallingConv.inc",
        "ARMGenSubtargetInfo.inc",
        "ARMGenDisassemblerTables.inc",
        "ARMGenRegisterBank.inc",
        "ARMGenGlobalISel.inc",
        "ARMGenSystemRegister.inc",
    ],
}

subdirs = ["*"]
