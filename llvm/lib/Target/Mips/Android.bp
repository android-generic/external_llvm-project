cc_library_static {
    name: "libLLVM19MipsCodeGen",
    defaults: [
        "llvm19-lib-defaults",
        "llvm19-mips-defaults",
    ],
    srcs: ["*.cpp"],
}

cc_defaults {
    name: "llvm19-mips-defaults",
    generated_headers: ["llvm19-gen-mips"],
    static_libs: ["llvm19-mips-headers"],
}

cc_library_static {
    name: "llvm19-mips-headers",
    vendor_available: true,
    host_supported: true,
    target: {
        windows: {
            enabled: true,
        },
    },
    export_include_dirs: ["."],
}

llvm19_tblgen {
    name: "llvm19-gen-mips",
    in: "Mips.td",
    outs: [
        "MipsGenRegisterInfo.inc",
        "MipsGenInstrInfo.inc",
        "MipsGenCodeEmitter.inc",
        "MipsGenMCCodeEmitter.inc",
        "MipsGenMCPseudoLowering.inc",
        "MipsGenAsmWriter.inc",
        "MipsGenAsmMatcher.inc",
        "MipsGenDAGISel.inc",
        "MipsGenFastISel.inc",
        "MipsGenCallingConv.inc",
        "MipsGenSubtargetInfo.inc",
        "MipsGenDisassemblerTables.inc",
    ],
}

subdirs = ["*"]
