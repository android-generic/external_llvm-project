    host_supported: true,
    vendor_available: true,
    name: "libLLVM16",
    defaults: [
        "llvm16-defaults",
        "force_build_llvm16_components",
    ],

    whole_static_libs: [
        // pre static libraries
        "libLLVM16Linker",
        "libLLVM16ipo",
        "libLLVM16DebugInfoDWARF",
        "libLLVM16DebugInfoMSF",
        "libLLVM16DebugInfoPDB",
        "libLLVM16Symbolize",
        "libLLVM16IRPrinter",
        "libLLVM16IRReader",
        "libLLVM16BitWriter",
        "libLLVM16BitReader",
        "libLLVM16Passes",
        "libLLVM16Demangle",
        "libLLVM16BitstreamReader",

        // post static libraries
        "libLLVM16LTO",
        "libLLVM16AsmPrinter",
        "libLLVM16SelectionDAG",
        "libLLVM16CodeGen",
        "libLLVM16DebugInfoCodeView",
        "libLLVM16Object",
        "libLLVM16ScalarOpts",
        "libLLVM16AggressiveInstCombine",
        "libLLVM16InstCombine",
        "libLLVM16Instrumentation",
        "libLLVM16TransformObjCARC",
        "libLLVM16TransformUtils",
        "libLLVM16Analysis",
        "libLLVM16Target",
        "libLLVM16TargetParser",
        "libLLVM16GlobalISel",
        "libLLVM16MCDisassembler",
        "libLLVM16MC",
        "libLLVM16MCParser",
        "libLLVM16Core",
        "libLLVM16AsmParser",
        "libLLVM16Option",
        "libLLVM16Support",
        "libLLVM16Vectorize",
        "libLLVM16ProfileData",
        "libLLVM16ProfileDataCoverage",
        "libLLVM16LibDriver",
        "libLLVM16ExecutionEngine",
        "libLLVM16RuntimeDyld",
        "libLLVM16MCJIT",
        "libLLVM16OrcJIT",
        "libLLVM16BinaryFormat",
        "libLLVM16MIRParser",
        "libLLVM16Remarks",
        "libLLVM16JITLink",
        "libLLVM16Coroutines",
        "libLLVM16TextAPI",
        "libLLVM16CFGuard",
        "libLLVM16FrontendOpenMP",
        "libLLVM16HelloNew",
        "libLLVM16OrcShared",
        "libLLVM16OrcTargetProcess",
        "libLLVM16InterfaceStub",
        "libLLVM16Debuginfod",
        "libLLVM16WindowsDriver",
    ],

    export_include_dirs: ["include"],

    target: {
        host: {
            // Host build pulls in all ARM, Mips, X86 components.
           whole_static_libs: llvm_arm_static_libraries +
                llvm_aarch64_static_libraries +
                llvm_mips_static_libraries +
                llvm_x86_static_libraries,
            export_include_dirs: ["host/include"],
        },
        windows: {
            enabled: true,
            host_ldlibs: [
                "-limagehlp",
                "-lpsapi",
                "-lole32",
                "-lversion",
            ],
        },
        darwin: {
            host_ldlibs: [
                "-ldl",
                "-lpthread",
            ],
        },
        linux: {
            host_ldlibs: [
                "-ldl",
                "-lpthread",
            ],
        },
        android: {
            export_include_dirs: ["device/include"],
            whole_static_libs: llvm_amdgpu_static_libraries,
        },
        android_arm: {
            whole_static_libs: llvm_arm_static_libraries,
        },
        android_x86: {
            whole_static_libs: llvm_x86_static_libraries +
                llvm_arm_static_libraries +
                llvm_aarch64_static_libraries,
        },
        android_x86_64: {
            whole_static_libs: llvm_x86_static_libraries +
                llvm_arm_static_libraries +
                llvm_aarch64_static_libraries,
        },
        android_arm64: {
            whole_static_libs: llvm_aarch64_static_libraries +
                llvm_arm_static_libraries,
        },
    },
}

